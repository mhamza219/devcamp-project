

<br>
<div class="col-md-4">

  <div class="card mb-4 box-shadow">
  	<%#= tag portfolio_item.thumb_image  unless portfolio_item.thumb_image.nil? %>
  	<%#= image_tag portfolio_item.main_image unless portfolio_item.main_image.nil? %>
    <!-- <img class="card-img-top" data-src="holder.js/100px225?theme=thumb&bg=55595c&fg=eceeef&text=Thumbnail" alt="Card image cap"> -->
    <%= image_tag portfolio_item.images if portfolio_item.images.present? %>
    <div class="card">
    	
		    <div class="card-body">
		      <p class="card-text"><%= link_to portfolio_item.title, portfolio_show_path(portfolio_item) %> </p> <%= portfolio_item.subtitle %>
		      <div class="d-flex justify-content-between align-items-center">
		        <div class="btn-group">
		          <%=link_to 'View', portfolio_show_path(portfolio_item),class: "btn btn-sm btn-outline-secondary"%>
		          
		          	<%=link_to 'Edit', edit_portfolio_path(portfolio_item) ,class: "btn btn-sm btn-outline-secondary"%>

		          	<%= link_to 'Delete', portfolio_path(portfolio_item), method: :delete, data: {confirm: "Are you Sure?"},class: "btn btn-sm btn-outline-secondary" if logged_in?(:site_admin) %>
		        </div>
		        <small class="text-muted">9 mins</small>
		      </div>
		    </div>
    </div>
  </div>
</div>





            






